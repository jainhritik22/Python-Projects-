import random

min_value = 1
max_value = 6
roll_again = 'yes'

while roll_again.lower() == 'yes' or roll_again.lower() == 'y':
    print('Rolling the dice...')
    print('The values are:')
    print(random.randint(min_value, max_value))
    print(random.randint(min_value, max_value))
    roll_again = input("Roll the dices again? (yes/y to continue): ")
